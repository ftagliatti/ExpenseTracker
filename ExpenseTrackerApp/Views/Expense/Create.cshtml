@model ExpenseTrackerWebApp.Models.Expense

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="PersonId"></label>
                            <input asp-for="PersonId" class="form-control" />
                            <span asp-validation-for="PersonId" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="ItemName"></label>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Amount"></label>
                            <input asp-for="Amount" type="number" step="any" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Date"></label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
